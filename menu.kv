<Menu>
    name: 'menu'
    BoxLayout:
        orientation: 'vertical'
        padding: 100, 100
        spacing: 30
        canvas:
            Color:
                rgba:140,212,64,1
            Rectangle:
                size:self.size
                pos:self.pos
                source:'lumiar1.jpg'
        Image:
            source: 'lumiar-amarelo.png'
            width: 200
            height: 200
            allow_strech: True
        Botao:
            text: 'Cachoeiras'
            on_release: app.root.current = 'telacachoeiras'
        Botao:
            text: 'Mercados'
            on_release: app.root.current = 'mercados'
        Botao:
            text: 'Fotos'
            on_release: app.root.current = 'fotos'
        Botao:
            text: 'Sair'
            on_release:root.confirmacao()